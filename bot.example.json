{
  "auth": {
    "token": "REPLACEME",
    "intents": {
      "guilds": true,
      "guild_messages": true,
      "members": true,
      "message_content": true
    }
  },
  "commands": {
    "create_match": {
      "invoke_with": "schedule-match",
      "description": "Schedule a match between two opposing teams",
      "parameters": {
        "team_1": {
          "uiname": "team¹",
          "helptext": "Affiliated team"
        },
        "team_2": {
          "uiname": "team²",
          "helptext": "Opposing team"
        },
        "year": {
          "uiname": "year",
          "helptext": "The year this match will take place"
        },
        "month": {
          "uiname": "month",
          "helptext": "The month this match will take place"
        },
        "day": {
          "uiname": "day",
          "helptext": "The day of the month this match will take place"
        },
        "hour": {
          "uiname": "hour",
          "helptext": "The hour of day (in military time) this match will take place"
        },
        "minute": {
          "uiname": "minute",
          "helptext": "The minute of the hour this match will take place"
        },
        "timezone": {
          "uiname": "timezone",
          "helptext": "The timezone identifier used to localize the provided date/time info"
        }
      },
      "allowed_roles": [
        "staff",
        "team captain"
      ]
    },
    "delete_match": {
      "invoke_with": "cancel-match",
      "description": "Cancel a match between two opposing teams",
      "parameters": {
        "team_1": {
          "uiname": "team¹",
          "helptext": "Affiliated team"
        },
        "team_2": {
          "uiname": "team²",
          "helptext": "Opposing team"
        }
      },
      "allowed_roles": [
        "staff",
        "team captain"
      ]
    },
    "list_matches": {
      "invoke_with": "match-calendar",
      "description": "Display a list of upcoming matches",
      "parameters": {},
      "allowed_roles": []
    },
    "command_help": {
      "invoke_with": "command-help",
      "description": "Show helptext for commands provided by this bot",
      "parameters": {
        "command": {
          "uiname": "command",
          "helptext": "Show this command's man page"
        }
      },
      "allowed_roles": []
    }
  },
  "storage": {
    "database": "match.db"
  }
}
